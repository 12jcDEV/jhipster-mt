<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <!--
        Added the entity Tenant.
    -->
    <changeSet id="20150422093932" author="jhipster">
        <preConditions onFail="CONTINUE">
            <customPrecondition className="com.yjiky.mt.multitenancy.MultitenantPrecondition">
                <param name="tenancy" value="landlord"/>
            </customPrecondition>
        </preConditions>
        <createTable tableName="T_TENANT">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tenant_name" type="varchar(255)"/>
            <column name="db_host" type="varchar(255)"/>
            <column name="db_port" type="integer"/>
            <column name="db_name" type="varchar(255)"/>
            <column name="db_user_name" type="varchar(255)"/>
            <column name="db_password" type="varchar(255)"/>
            <column name="is_enabled" type="boolean" valueBoolean="false">
                <constraints nullable="false" />
            </column>
            <column name="has_database" type="boolean" valueBoolean="false">
                <constraints nullable="false" />
            </column>
            <column name="has_generated_schema" type="boolean" valueBoolean="false">
                <constraints nullable="false" />
            </column>
            <column name="dbtype_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="dbtype_id"
                                 baseTableName="T_TENANT"
                                 constraintName="fk_tenant_dbtype_id"
                                 referencedColumnNames="id"
                                 referencedTableName="T_DBTYPE"/>

        <loadData encoding="UTF-8"
                  file="classpath:config/liquibase/tenants.csv"
                  separator=";"
                  tableName="T_TENANT"/>
    </changeSet>
</databaseChangeLog>
